{
  "name": "codemap",
  "publisher": "mommysgoodpuppy",
  "displayName": "OpenCodemap",
  "description": "AI-powered code exploration and visualization with dual-view rendering",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemap.openPanel",
        "title": "Codemap: Open Panel"
      },
      {
        "command": "codemap.generateFromSelection",
        "title": "Codemap: Generate from Selection"
      },
      {
        "command": "codemap.setApiKey",
        "title": "Codemap: Set OpenAI API Key"
      },
      {
        "command": "codemap.showStoragePath",
        "title": "Codemap: Show Storage Path"
      },
      {
        "command": "codemap.showHome",
        "title": "Codemap: Back to List",
        "icon": "$(arrow-left)"
      },
      {
        "command": "codemap.showAgentLog",
        "title": "Codemap: Show Agent Log"
      },
      {
        "command": "codemap.showRawAgentLog",
        "title": "Codemap: Show Raw Agent Log"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemap-explorer",
          "title": "Codemap",
          "icon": "$(compass)"
        }
      ]
    },
    "views": {
      "codemap-explorer": [
        {
          "id": "codemap.mainView",
          "name": "Codemaps",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codemap.showHome",
          "when": "view == codemap.mainView",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Codemap",
      "properties": {
        "codemap.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "vscode"
          ],
          "description": "AI Provider to use. 'openai' uses an API key, 'vscode' uses models available in VS Code (like GitHub Copilot)."
        },
        "codemap.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for Codemap generation (only for 'openai' provider)"
        },
        "codemap.openaiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI API Base URL (for compatible APIs)"
        },
        "codemap.model": {
          "type": "string",
          "default": "gpt-4o",
          "description": "Model to use for Codemap generation (e.g., 'gpt-4o' for OpenAI, or a model selector for VS Code)"
        },
        "codemap.language": {
          "type": "string",
          "default": "English",
          "enum": [
            "English",
            "简体中文",
            "繁體中文",
            "日本語",
            "한국어",
            "Français",
            "Deutsch",
            "Español",
            "Português",
            "Русский"
          ],
          "description": "Language for AI responses and generated content"
        }
      }
    },
    "languageModelChatProviders": [
      {
        "vendor": "codemap",
        "displayName": "Codemap AI"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.21",
    "@ai-sdk/provider-utils": "^4.0.10",
    "ai": "^6.0.58",
    "ignore": "^7.0.5",
    "lucide-react": "^0.511.0",
    "mermaid": "^11.12.2",
    "react": "^19.2.1",
    "react-arborist": "^3.4.3",
    "react-dom": "^19.2.1",
    "svg-pan-zoom": "^3.6.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
